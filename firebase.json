{
  "hosting": {
    "public": "./frontend/build/web",
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/__/auth/(.*)",
        "headers": [
          {
            "key": "Cross-Origin-Resource-Policy",
            "value": "same-site"
          }
        ]
      },
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cross-Origin-Embedder-Policy",
            "value": "require-corp"
          },
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "pnpm --prefix \"$RESOURCE_DIR\" run lint",
      "pnpm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "runtime": "nodejs22"
  },
  "emulators": {
    "singleProjectMode": true,
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    }
  }
}

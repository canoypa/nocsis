{
  "private": true,
  "name": "nocsis-functions",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format src",
    "test": "firebase emulators:exec 'pnpm vitest run --coverage'",
    "test:watch": "vitest watch --coverage",
    "build": "tsup src/main.ts -d dist --format esm --clean --sourcemap",
    "build:watch": "tsup src/main.ts -d dist --format esm --clean --sourcemap --watch",
    "serve": "pnpm run serve-emulator",
    "serve-emulator": "firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.1",
    "@google-cloud/secret-manager": "^6.1.1",
    "@googleapis/calendar": "^14.0.0",
    "@slack/web-api": "^7.13.0",
    "cron-parser": "^5.4.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^6.6.0",
    "luxon": "^3.7.2",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "3.1.4",
    "firebase-functions-test": "^3.4.1",
    "firebase-tools": "^14.25.0",
    "msw": "^2.12.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.1.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msw"
    ]
  }
}
